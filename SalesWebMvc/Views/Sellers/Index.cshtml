<!--Passando o meu model de Seller e indicando que ele será de um tipo collection-->
@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">

    <thead>
        <tr class="success">
            <th>

                <!--
                    Para renderizar os atributos, vamos usar um
                    recurso utilizado pelo framework.
                -->
                @Html.DisplayNameFor(model => model.Name)

            </th>
                
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>

            <th></th>

        </tr>
    </thead>

    <tbody>

        <!--Para buscar cada item de model temos que usar o foreach-->
        @foreach (var item in Model)
         {
            <tr class="text-info">

                <td>
                    <!--
                      Para renderizar os atributos, vamos usar um
                      recurso utilizado pelo framework.
                    -->
                    @Html.DisplayFor(modelItem => item.Name)

                </td>

                <td>

                    @Html.DisplayFor(modelItem => item.Email)

                </td>

                <td>

                    @Html.DisplayFor(modelItem => item.BirthDate)

                </td>

                <td>

                    @Html.DisplayFor(modelItem => item.BaseSalary)

                </td>

                <td>
                    <!--
                       Usamos um asp-action para passar a nossa ação e o
                       asp-router-id para passar o id na nossa rota.
                       Para pegar o id usamos o item do for each.
                    -->
                    <button class="btn" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                    <button class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</button>
                    <button class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                </td>

            </tr>

         }

    </tbody>

</table> 