<!--Declarando a class Seller-->
@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />

<div class="row">

    <div class="col-md-4">

        <!--Esse Create é em relação ao método POST que está no controlador.-->
        <form asp-action="Create">

            <div class="form-group">

                <!--Indica que esse campo está relacionado ao atributo name-->
                <label asp-for="Name" class="control-label text-info"></label>
                <input asp-for="Name" class="form-control" />

            </div>

            <div class="form-group">

                <label asp-for="Email" class="control-label text-info"></label>
                <input asp-for="Email" class="form-control" />

            </div>

            <div class="form-group">

                <label asp-for="BirthDate" class="control-label text-info"></label>
                <input asp-for="BirthDate" class="form-control" />

            </div>

            <div class="form-group">

                <label asp-for="BaseSalary" class="control-label text-info"></label>
                <input asp-for="BaseSalary" class="form-control" />

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>

        </form>

    </div>

</div>
